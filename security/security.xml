<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- CPE Module Category -->
    <record id="module_category_cpe" model="ir.module.category">
        <field name="name">CPE Dictionary</field>
        <field name="description">Common Platform Enumeration (CPE) Dictionary Management</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- CPE Management Security Groups -->
    <record id="group_cpe_user" model="res.groups">
        <field name="name">CPE User</field>
        <field name="comment">Can view and search CPE dictionary entries</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_cpe"/>
    </record>
    
    <record id="group_cpe_manager" model="res.groups">
        <field name="name">CPE Manager</field>
        <field name="comment">Can manage CPE dictionary and matching configurations</field>
        <field name="implied_ids" eval="[(4, ref('group_cpe_user'))]"/>
        <field name="category_id" ref="module_category_cpe"/>
    </record>
    
    <!-- Record Rules -->
    <!-- Admin has full access to everything -->
    <record id="cpe_dictionary_rule_admin" model="ir.rule">
        <field name="name">CPE Dictionary: Admin Full Access</field>
        <field name="model_id" ref="model_vuln_fw_nvd_cpe_dictionary"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
    
    <record id="cpe_match_rule_admin" model="ir.rule">
        <field name="name">CPE Match: Admin Full Access</field>
        <field name="model_id" ref="model_vuln_fw_nvd_cpe_match"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
    
    <!-- Regular users need CPE groups -->
    <record id="cpe_dictionary_rule_user" model="ir.rule">
        <field name="name">CPE Dictionary: User Access</field>
        <field name="model_id" ref="model_vuln_fw_nvd_cpe_dictionary"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_cpe_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="cpe_dictionary_rule_manager" model="ir.rule">
        <field name="name">CPE Dictionary: Manager Access</field>
        <field name="model_id" ref="model_vuln_fw_nvd_cpe_dictionary"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_cpe_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <record id="cpe_match_rule_user" model="ir.rule">
        <field name="name">CPE Match: User Access</field>
        <field name="model_id" ref="model_vuln_fw_nvd_cpe_match"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_cpe_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="cpe_match_rule_manager" model="ir.rule">
        <field name="name">CPE Match: Manager Access</field>
        <field name="model_id" ref="model_vuln_fw_nvd_cpe_match"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_cpe_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
</odoo>