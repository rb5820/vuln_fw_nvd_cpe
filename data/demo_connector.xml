<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default NVD+CPE Connector -->
        <record id="nvd_cpe_connector_default" model="vuln.fw.nvd.connector">
            <field name="name">NVD + CPE Connector</field>
            <field name="active">True</field>
            <field name="batch_size">50</field>
            <field name="auto_sync">False</field>
            <!-- CPE-specific settings -->
            <field name="enable_cpe_processing">True</field>
            <field name="auto_create_cpe_dictionary">True</field>
            <field name="cpe_confidence_threshold">0.7</field>
        </record>
        
        <!-- Basic NVD-only Connector (fallback) -->
        <record id="nvd_connector_basic" model="vuln.fw.nvd.connector">
            <field name="name">Basic NVD Connector</field>
            <field name="active">False</field>
            <field name="batch_size">100</field>
            <field name="auto_sync">False</field>
        </record>
        
    </data>
</odoo>