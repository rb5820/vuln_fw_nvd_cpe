<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- CPE Product Form View -->
    <record id="view_cpe_product_form" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.cpe.product.form</field>
        <field name="model">vuln.fw.nvd.cpe.product</field>
        <field name="arch" type="xml">
            <form string="CPE Product">
                <header>
                    <button name="action_query_nvd_cpe_api" type="object" string="Sync from NVD" class="oe_highlight" icon="fa-cloud-download" help="Query NVD API for this product" invisible="not cpe_uri"/>
                    <button name="action_build_cpe_uri" string="Build CPE URI" type="object" class="btn-primary"/>
                    <button name="toggle_debug_mode" type="object" string="ðŸ› Debug Mode" class="btn-warning" icon="fa-bug"/>
                    <button name="action_create_version_products" string="Create Version Products" type="object" class="btn-success" invisible="not cpe_uri"/>
                    <button name="action_find_related_cpes" string="Find Related CPEs" type="object" class="btn-secondary"/>
                    <button name="action_view_cpe_entries" string="View CPE Entries" type="object" class="btn-secondary" invisible="cpe_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_cpe_entries" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="cpe_count" widget="statinfo" string="CPE Entries"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-sitemap" invisible="not child_ids">
                            <field name="child_ids" widget="statinfo" string="Child Versions"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Deprecated" bg_color="text-bg-warning" invisible="not deprecated"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active or deprecated"/>
                    <widget name="web_ribbon" title="Not in NVD" bg_color="text-bg-info" invisible="not not_registered_in_nvd"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Product name (e.g., windows, chrome)"/>
                        </h1>
                        <h2>
                            <field name="display_name" readonly="1" class="text-muted"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group>
                            <field name="vendor_id" options="{'no_create': True}"/>
                            <field name="category"/>
                            <field name="cpe_part"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="version"/>
                            <field name="version_pattern"/>
                            <field name="parent_id"/>
                            <field name="version_level" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="deprecated"/>
                            <field name="not_registered_in_nvd"/>
                        </group>
                        <group>
                            <field name="nvd_created" readonly="1"/>
                            <field name="nvd_last_modified" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="ðŸ“Š CPE Information">
                            <group>
                                <group string="Basic CPE Fields">
                                    <field name="cpe_uri" readonly="1"/>
                                    <field name="title"/>
                                    <field name="cpe_update"/>
                                    <field name="cpe_edition"/>
                                </group>
                                <group string="Advanced CPE Fields">
                                    <field name="cpe_language"/>
                                    <field name="cpe_sw_edition"/>
                                    <field name="cpe_target_sw"/>
                                    <field name="cpe_target_hw"/>
                                    <field name="cpe_other"/>
                                </group>
                            </group>
                        </page>
                        <page string="ðŸ“ NVD Metadata">
                            <group>
                                <group string="NVD Identifiers">
                                    <field name="nvd_cpe_id" readonly="1"/>
                                    <field name="cpe_uri" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Deprecation Status">
                                    <field name="deprecated" readonly="1"/>
                                    <field name="deprecated_by" readonly="1" widget="text" invisible="not deprecated_by"/>
                                </group>
                                <group string="Product Title">
                                    <field name="title" readonly="1"/>
                                </group>
                            </group>
                            <group string="NVD Titles (All Languages)">
                                <field name="nvd_titles" readonly="1" widget="text" nolabel="1"/>
                            </group>
                            <group string="NVD References (JSON)">
                                <field name="nvd_references" readonly="1" widget="text" nolabel="1"/>
                            </group>
                        </page>
                        <page string="ðŸ’¬ Description">
                            <field name="description" placeholder="Product description and additional information..."/>
                        </page>
                        <page string="ðŸ”— References">
                            <field name="reference_ids">
                                <list>
                                    <field name="url" widget="url"/>
                                    <field name="ref_type"/>
                                    <field name="entity_name"/>
                                    <field name="status"/>
                                    <field name="usage_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="ðŸ“– CPE Dictionary Entries">
                            <field name="cpe_dictionary_ids" readonly="1">
                                <list>
                                    <field name="cpe_name"/>
                                    <field name="title"/>
                                    <field name="version"/>
                                    <field name="deprecated"/>
                                </list>
                            </field>
                        </page>
                        <page string="ðŸŒ³ Child Versions" invisible="not child_ids">
                            <field name="child_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="version"/>
                                    <field name="cpe_uri"/>
                                    <field name="version_level"/>
                                    <field name="deprecated"/>
                                    <field name="cpe_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="ðŸ§ª Manual CPE Test" name="manual_test">
                            <group>
                                <group string="Test CPE 2.3 URI">
                                    <field name="test_cpe_uri" placeholder="cpe:2.3:a:microsoft:edge_chromium:143.0.3650.66:*:*:*:-:windows:*:*"/>
                                </group>
                            </group>
                            <group string="Instructions">
                                <div>
                                    <p><strong>How to use:</strong></p>
                                    <ol>
                                        <li>Enter a valid CPE 2.3 URI in the field above</li>
                                        <li>Save the record to store the test URI</li>
                                        <li>Use this field to validate and test CPE URI formats</li>
                                    </ol>
                                    <p><strong>CPE URI Format:</strong></p>
                                    <code>cpe:2.3:type:vendor:product:version:update:edition:language:sw_edition:target_sw:target_hw:other</code>
                                    <p style="margin-top: 8px;"><strong>Example:</strong></p>
                                    <code>cpe:2.3:a:microsoft:windows_10:1909:*:*:*:*:*:x64:*</code>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- CPE Product List View -->
    <record id="view_cpe_product_list" model="ir.ui.view">
        <field name="name">vuln.fw.nvd.cpe.product.list</field>
        <field name="model">vuln.fw.nvd.cpe.product</field>
        <field name="arch" type="xml">
            <list string="CPE Products">
                <field name="vendor_id"/>
                <field name="name"/>
                <field name="version"/>
                <field name="cpe_part"/>
                <field name="category"/>
                <field name="cpe_count"/>
                <field name="vulnerability_count"/>
                <field name="deprecated"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- CPE Product Action -->
    <record id="action_cpe_product" model="ir.actions.act_window">
        <field name="name">CPE Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vuln.fw.nvd.cpe.product</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
